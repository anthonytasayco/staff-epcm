.b20
	padding-top 50px
	padding-bottom 60px
	text-align center
	.btn2 .btn-ico
		font-size 15px

.b20-cnt
	max-width 885px
	width 95%
	margin auto

.b20-titulo
	display inline-block
	position relative
	margin-bottom 50px
	h3
		color c-4
		margin 0
		font-size 30px
		padding 14px 0
	strong
		font-family t-2
		color c-3
	&:before
		content "\e90c"
		font-family icomoon
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		color c-4
		font-size 65px
		height 65px
		width 75px
		opacity .2
		font-weight lighter

.b20-links
	width 100%
	max-width 500px
	margin auto
	font-size 0
	padding-right 16px
	box-sizing border-box

.b20-link
	width 50%
	display inline-block
	padding 0 20px
	box-sizing border-box
	background #f2f2f2
	position relative
	transition all .3s linear
	&:before
		content ""
		position absolute
		top 0
		right -15px
		width 0
		height 0
		border-style solid
		border-width 23px 0 23px 16px
		border-color transparent transparent transparent #f2f2f2
		transition all .3s linear
		z-index 1
	&.active
		background c-4
		color blanco
		font-family t-2
		&:before
			border-color transparent transparent transparent c-4

@media screen and (min-width 1025px)
	.b20-link:hover
		background c-4
		color blanco
		font-family t-2
		&:before
			border-color transparent transparent transparent c-4

.b20-link-inside
	display table-cell
	vertical-align middle
	height 45px
	width 2000px
	font-size 14px
	text-align center

//item

.b20-item
	font-size 0
	margin-top 45px
	position relative

.b20-close
	display block
	position absolute
	right -7px
	top -7px
	height 26px
	width 26px
	line-height 26px
	color blanco
	background c-3
	border-radius 100%
	font-size 10px
	cursor pointer
	transition all .3s linear
	z-index 10

@media screen and (min-width 1025px)
	.b20-close:hover
		background c-4

.b20-top
	margin-bottom 20px

.b20-cnt-img
	display inline-block
	vertical-align top
	width 36.16%

.b20-info
	display inline-block
	vertical-align top
	width 63.84%
	text-align left
	background rgba(21, 119, 248, .06)

.b20-info-table
	display table-cell
	vertical-align middle
	height 220px
	padding 25px 28px
	box-sizing border-box


.b20-img
	width 100%
	height 220px
	backgroundsize()
	position relative
	&:before
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%)

.b20-titulo-inside
	margin-bottom 15px
	h3
		font-size 18px
		margin 0
		color c-3
	strong
		font-family t-2
		color c-4

.b20-diplomado
	li
		font-size 13px
		position relative
		padding-left 20px
		margin-bottom 7px
		&:before
			content ""
			position absolute
			top 5px
			left 0
			width 7px
			height 7px
			background c-4
			transform rotate(45deg)

.b20-bottom
	text-align left
	border-top 3px solid c-4
	padding-top 20px
	cf()

.b20-total
	float left
	font-size 18px

.b20-precio
	float right
	font-size 25px
	font-family t-2
	color c-3

.b20-boton
	margin-top 30px
	text-align right

@media screen and (max-width 1025px)
	.b20
		padding 50px 0

@media screen and (max-width 960px)
	.b20-cnt-img
		width 30.16%

	.b20-info
		width 69.84%

	.b20-img
		height 280px

	.b20-info-table
		height 280px

@media screen and (max-width 640px)
	.b20
		padding 30px 0

	.b20-cnt-img
		width 100%

	.b20-img
		height 200px

	.b20-top
		margin-bottom 0

	.b20-info
		width 100%

	.b20-info-table
		height auto
		padding 20px

	.b20-links
		padding-right 0

	.b20-link
		width 100%
		&:before
			display none

	.b20-titulo
		margin-bottom 30px

	.b20-item
		margin-top 30px

	.b20-total
		font-size 16px

	.b20-precio
		font-size 20px

@media screen and (max-width 480px)
	.b20-boton
		text-align center
