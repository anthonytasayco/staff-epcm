.menu-responsive, .menu-toggle-resp			
	a, h4
		display table-cell
		vertical-align middle
		width 500px
		height 38px
		background rgba(51,62,72, 0)
		color c-3
		font-family t-0
		font-size 13px
		text-transform uppercase
		padding 0 10px
	li.active
		a
			background rgba(51,62,72, .1)			
	
.menu-toggle-resp:last-child
	li:last-child
		display block
		
.menu-toggle-resp
	li:last-child, .delet-resp, .desplegableResp
		display none
		
	.openToggleResp
		cursor pointer
		position relative	
			
	.iconOpenToggle, .iconCloseToggle
		display block
		width 30px
		height 38px
		line-height 38px
		position absolute
		top 0
		right 10px
		transition all .25s ease-in-out
		&:before
			content "\e905"
			display block
			width 100%
			height 100%
			color c-3
			font-family icomoon
			font-size 11px
			text-align center
			
	.iconCloseToggle
		&:before
			content "\e906"
						
	.openToggleResp
		.iconOpenToggle
			transform scale(1) rotate(0deg)		
			opacity 1
			visibility visible
			z-index 1
		.iconCloseToggle
			transform scale(0) rotate(-180deg)
			opacity 0
			visibility hidden
			z-index -1
		&.active
			background rgba(51,62,72, .1)
			.iconOpenToggle
				transform scale(0) rotate(180deg)			
				opacity 0
				visibility hidden
				z-index -1
			.iconCloseToggle
				transform scale(1) rotate(0deg)				
				opacity 1
				visibility visible
				z-index 1
				

