.h1-openDesplegable, .h1-closeDesplegable
	display block
	width 30px
	height 30px
	line-height 30px
	font-size 16px
	text-align center
	cursor pointer
	position absolute
	top 50%
	right 0
	margin-top -15px
	transition all .4s ease-in-out

.h1-openDesplegable
	color c-3

.h1-closeDesplegable
	color c-4
	
.h1-openDesplegable, .h1-closeDesplegable	
	@media screen and (min-width 1025px)
		&:hover
			color blanco
			
.h1-openDesplegable
	transform scale(1) rotate(0deg)
	opacity 1
	visibility visible
	&.active
		transform scale(0) rotate(180deg)
		opacity 0
		visibility hidden

.h1-closeDesplegable
	color c-4
	transform scale(0) rotate(-180deg)
	opacity 0
	visibility hidden
	&.active
		transform scale(1) rotate(0deg)
		opacity 1
		visibility visible


