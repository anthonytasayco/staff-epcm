.header-overlay
	display block
	width 100%
	height 100%
	background negro
	position fixed
	top 0
	left 0
	z-index -1
	opacity 0
	visibility hidden
	transition all .2s ease-in-out
	&.active
		opacity 1
		visibility visible
		opacity .7
		z-index 150

.header-position
	width 100%
	position fixed
	top 0
	left 0
	z-index 250
	box-shadow 0px -1px 10px 0px rgba(0,0,0,0)	

.main-header
	position relative

.h1-block
	height 80px
	background c-4	
	position relative
	z-index 1201
	transition all .25s ease
	

.h1-cnt
	font-size 0
	text-align right
	position relative
	
.h1-logo
	display block
	width 201px
	position absolute
	top 18px
	left 0
	transition all .25s ease
	figure
		width 100%
	img
		img-res()

.h1-logo-1
	opacity 1
	visibility visible

.h1-logo-2
	opacity 0
	visibility hidden
			

.h1-boxRight
	display inline-block

.h1-group
	margin-bottom 15px	

.h1-menuTop, .h1-languaje
	display inline-block
	vertical-align top

.h1-menuTop
	padding-top 10px
	li
		display inline-block
		vertical-align top
		margin-left 25px
		&:first-child
			margin-left 0
	a
		display inline-block
		line-height 1
		color blanco
		font-family t-0
		font-size 14px
		position relative
		padding-left 22px
		transition-all()
	span
		display inline-block
		color blanco
		font-size 16px
		position absolute
		top 50%
		left 0
		transform translateY(-50%)
		transition-all()

.h1-menuTop
	@media screen and (min-width 1025px)
		li:hover
			a, span
				color c-3

.h1-resp-carrito
	display none

.h1-languaje
	margin-left 25px
	li
		display inline-block
		vertical-align top
		position relative
	li:before
		content ""
		width 1px
		height 14px
		background blanco
		position absolute
		right 0
		bottom 4px
		opacity 1
		visibility visible
	li:last-child
		&:before
			display none
	a
		display table-cell
		vertical-align bottom
		width 45px
		height 28px
		background transparent
		color blanco
		font-family t-7
		font-size 14px
		text-align center
		box-sizing border-box
		padding-bottom 3px
		transition-all()

.h1-languaje
	&.bordes
		li:before
			opacity 1
			visibility visible
	&.borde-1
		li:nth-child(1)
			&:before
				opacity 1
				visibility visible
	&.borde-2
		li:nth-child(2)
			&:before
				opacity 1
				visibility visible

.h1-languaje
	li.active
		a
			background c-3
	li.delet-borde1
		&:before
			opacity 0
			visibility hidden	
	@media screen and (min-width 1025px)
		li:hover
			a
				background c-3
				
		&.bordes
			li:before
				opacity 0
				visibility hidden
		&.borde-1
			li:nth-child(1)
				&:before
					opacity 0
					visibility hidden
		&.borde-2
			li:nth-child(2)
				&:before
					opacity 0
					visibility hidden

