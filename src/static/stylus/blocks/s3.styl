.b3
	padding 0 0 120px 0
	width 100%
	.bx-wrapper .bx-controls-direction a
		background c-9
		height 30px
		width 37px
		text-indent 0
		text-align center
		transition all .5s ease-in
		&:hover
			background c-4
			&:before
				color blanco
				transition all .5s ease-in
		&:before
			position absolute
			top 0
			left 0
			color c-0
			display block
			line-height 30px
			content "\e607"
			font-family icomoon
			font-size 26px
			width 100%
			height 100%
	.bx-wrapper .bx-controls-direction a.bx-next
		right 0
		&:before
			content "\e606"
	.bx-wrapper .bx-controls-direction a.bx-prev
		left 0
	.bx-controls-direction
		position absolute
		bottom -35px
		width 90px
		left 0
		right 0
		margin auto
.b3-ctn
	text-align center
	h2
		font-weight normal
		margin 0
		font-size 15px
		color c-1
	strong
		font-weight normal
		font-family t-3
		font-size 20px
		padding-right 45px
		position relative
		&:before
			position absolute
			top 0
			right 20px
			content ""
			display block
			height 25px
			width 3px
			background c-4
.b3-ctn-items
	margin 40px 0 0 0
.b3-item
	width 25%
	height 340px
	position relative
	.b16-absolute1, .b16-absolute2
		text-align left
@media screen and (min-width: 1025px)
	.b3-item
		&:hover
			.b16-img:before
				opacity 0
				visibility hidden
			.b16-img:after
				opacity 1
				visibility visible
			.b16-absolute2
				opacity 0
				visibility hidden
			.b16-absolute4
				opacity 0
				visibility hidden
			.b16-absolute1
				opacity 1
				visibility visible
			.b16-absolute3
				opacity 1
				visibility visible
@media screen and (max-width: 1270px)
	.b3ActiveSlider
		width 900px
		margin-left auto
		margin-right auto
@media screen and (max-width: 1024px)
	.b3
		padding-bottom 75px
@media screen and (max-width: 950px)
	.b3ActiveSlider
		width 600px
@media screen and (max-width: 768px)
	.b3-ctn
		strong
			font-size 15px
			padding 0 30px
			&:before
				right 10px
@media screen and (max-width: 650px)
	.b3ActiveSlider
		width 300px
	.b3
		padding-bottom 30px
		.bx-wrapper .bx-controls-direction a
			display none
	.b3-ctn
		text-align center
		strong
			display block
			margin-bottom 6px
			&:before
				display none
	.b3-ctn-items
		margin-top 30px
@media screen and (max-width: 640px)
	.b3-item
		.b16-img
			height 340px
