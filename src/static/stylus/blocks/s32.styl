.b32
	padding 70px 0 95px 0
	width 100%
	font-size 14px
.b32-cnt
	color c-9
	max-width 1110px
.b32-back
	display block
	font-size 14px
	text-transform uppercase
.b32-cnt-prin
	max-width 576px
	margin 10px auto 0 auto
.b32-fecha
	color c-4
	border-bottom 1px solid c-9
	padding 0 0 10px 25px
	box-sizing border-box
	position relative
	&:before
		position absolute
		top 0
		left 0
		content "\e91b"
		display block
		font-family icomoon
.b32-title
	color c-3
	margin 14px 0 16px 0
	text-transform uppercase
	h2
		font-weight normal
		margin 0
		font-size 20px
.b32-img
	img
		display block
		width 100%
		height auto
.b32-text
	margin 25px 0 0 0
	color c-0
	p
		margin 0 0 2px 0
	ul
		li
			position relative
			padding-left 22px
			line-height 1.9
			margin-bottom 9px
			&:before
				content "\e930"
				top 2px
				left 0
				color c-4
				font-size 12px
				font-family icomoon
				position absolute
	ol
		li
			counter-increment list
			list-style-type none
			margin-bottom 13px
			margin-top 13px
			line-height 1.9
			position relative
			&:before
				color: c-4
				content: counter(list) "."
				left:-32px
				position: absolute
				text-align: right
				width: 26px
.b32-compartir
	color c-3
	margin-top 25px
	font-size 13px
	a
		color blanco
		margin-left 8px
		display inline-block
		background c-4
		height 25px
		width 25px
		text-align center
		line-height 25px
		border-radius 25px
@media screen and (max-width 1024px)
	.b32
		padding 50px 0
@media screen and (max-width 1024px)
	.b32
		padding 30px 0
	.b32-cnt-prin
		margin-top 25px
@media screen and (max-width 480px)
	.b32-title
		h2
			font-size 17px