/* Mapa */
.b34-mp
	.cnt-map
		text-align center
		.box-map
			width 100%
			height 287px
			position relative
			transition all .5s
		.map
			width 100%
			height 100%
		.abrir-map, .cerrar-map
			text-align center
			display inline-block
			line-height 40px
			height 40px
			border-radius 17px
			overflow hidden
			color blanco
			font-size 16px
			font-family t-0
			padding 0 30px
			display none
			border 1px solid c-2
			background c-2
			transition-all()
			transform scale(1)
			cursor pointer
			span
				position relative
				display block

		.cerrar-map
			position absolute
			right 0px
			top 0px
			z-index 100


		
@media screen and (max-width: 768px)

	.b34-mp
		width 100%
		margin 0
		padding-top 30px
		.cnt-map
			position relative
			z-index 2000
			.abrir-map
				display inline-block
			.cerrar-map
				display inline-block
			.box-map
				position fixed
				top -200%
				left 0
				height 100%
			.anima-map
				top  0
					