.g-input
	text-align left
	input,select,textarea
		font-size 14px
		font-family t-0
		color c-0
		height 40px
		line-height 40px
		width 100%
		box-sizing border-box
		border none
		background blanco
		border 1px solid c-0
		padding 0 14px
	select
		padding 0
		padding-left 14px
	textarea
		height 104px
		line-height 1.2
		padding-top 10px
	label
		display block
		cursor auto
		text-transform uppercase
		font-size 14px
		margin-bottom 10px
		padding-left 13px

.g-select
	select
		width 100%
		height 40px
		background blanco
		background-image url('../img/input-ico.png')
		background-repeat no-repeat
		background-position center right
		appearance none

/* focus  */
.g-input
	&.active
		input,textarea, select
			border 1px solid c-4


@media screen and (max-width 768px)
	.g-input label
		padding-left 0



// VALIDATE
.formError
	.formErrorContent,
	.formErrorArrow div
		background-color c-3 !important
		color blanco
		border none
		font-size 13px
		font-family t-1
	.formErrorArrow
		.line1,.line2
			display none
