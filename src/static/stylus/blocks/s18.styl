//TAB5

.b18-t4-tabla
	display inline-block
	vertical-align top
	width 32.1%
	margin-right 1.8%
	&:last-child
		margin-right 0

.b18-t4-tablas
	max-width 574px
	width 100%
	margin-left 0
	margin-right auto
	font-size 0
	text-align center

.b18-top-tabla
	display table-cell
	vertical-align middle
	height 64px
	width 2000px
	padding 5px 5px
	box-sizing border-box
	background c-4
	color blanco
	text-align center
	font-size 14px

.b18-bottom-tabla
	text-align center
	font-size 0

.b18-bottom-item
	border 1px solid c-4
	box-sizing border-box
	color c-3
	margin 3.5px 0
	font-size 14px
	&:last-child
		margin-bottom 0
	span
		display table-cell
		vertical-align middle
		height 25px
		width 2000px
		position relative
		&:before
			content ""
			position absolute
			top 0
			bottom 0
			left 0
			margin auto
			height 60%
			width 1px
			background c-3
			opacity 0
			visibility hidden

.b18-tablita2, .b18-tablita3
	.b18-bottom-item span:last-child
		padding 0 10px
		box-sizing border-box
		&:before
			opacity 1
			visibility visible

.b18-t4-lista
	margin-top 25px
	li
		position relative
		padding-left 10px
		font-size 14px
		&:before
			content "+"
			position absolute
			top 0
			left 0

.b18-t4-tablas
	table
		font-size 14px
		p 
			margin 0
		tr,td, th
			border 1px solid #74cd80 
			padding 5px 
			color c-3
		th 
			background-color #74cd80
			color white
			padding-right 15px
			padding-left 15px
		thead th
			border-right 1px solid white 
		thead th:first-child
			margin-right 25px 
			margin-left 25px
		thead th:last-child
			border-right 1px solid #74cd80 

