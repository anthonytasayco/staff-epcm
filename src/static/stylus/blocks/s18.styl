		box-sizing border-box

	.b18-cnt
		width 95%

	.b18-cnt-tab
		max-width 800px
		width 95%
		margin auto

	.b18-link:nth-child(1):after, .b18-link:nth-child(2):after, .b18-link:nth-child(3):after
		opacity 1

	.b18-t4-tablas
		max-width inherit

@media screen and (max-width 768px)
	.b18-titulo
