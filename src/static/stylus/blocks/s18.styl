//TAB6

.b18-cnt-item
	font-size 0

.b18-info
	display inline-block
	vertical-align top
	width 57%
	padding-right 6%
	box-sizing border-box
	padding-top 12px
	text-align justify

.b18-t6-video
	display inline-block
	vertical-align top
	width 43%

.b18-t6-cnt-video
	position relative

.b18-t6-img
	width 100%
	height 100%
	backgroundsize()
	position absolute
	top 0
	left 0
	z-index 1
	opacity 1
	visibility visible
	transition all .5s linear .2s
	&.active
		z-index -1
		opacity 0
		visibility hidden
	&:before
		content ""
		width 100%
		height 100%
		background url('../img/b18-capa-video.png') 0px 0px no-repeat
		background-size cover
		position absolute
		top 0
		left 0
		z-index 2

.b18-t6-play
	width 43px
	height 43px
	line-height 43px
	background url('../img/b18-video.png')
	text-align center
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	z-index 10
	margin auto
	cursor pointer
	transition all .5s linear
	&.active
		display none
	&.b18-video-animacion
		animation b2_opaciti 1s linear infinite alternate

.b18-link-video
	position relative
	padding-bottom 61.35%
	padding-top 25px
	height 0
	.video-iframe
		position absolute
		top 0
		left 0
		width 100%
		height 100%

@keyframes b2_opaciti
	0%
		opacity 1

	100%
		opacity 0


//TAB//
.b18-cnt-tab
	position relative

.b18-tab-item
	position absolute
	opacity 0
	visibility hidden
	&.active
		opacity 1
		visibility visible
		position relative

//class before-tabs
.b18-add-before
	position relative
	&:before
		content ""
		font-family icomoon
		position absolute
		top -30px
		left -64px
		font-size 145px
		color c-4
		opacity .1

.b18-tab-1
	.b18-add-before:before
		content "\e900"

.b18-tab-2, .b18-tab-3, .b18-tab-4, .b18-tab-5, .b18-tab-6
	.b18-add-before:before
		content "\e903"

//media Query
@media screen and (max-width 1024px)
	.b18
		padding-top 50px

	.b18-t3-item
		padding 40px 0

	.b18-add-before:before
