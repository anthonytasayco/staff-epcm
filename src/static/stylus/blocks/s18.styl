.b18-acordion
	margin-bottom 15px

.b18-barra
	display table-cell
	vertical-align middle
	height 30px
	width 2000px
	background #c2c2c2
	color blanco
	position relative
	transition all .3s ease
	padding 7px 35px 7px 13px
	box-sizing border-box
	cursor pointer
	h3
		margin 0
		font-size 16px
		line-height 1.2

.b18-icon-span
	display block
	width 10px
	height 10px
	margin auto
	position absolute
	top 0
	bottom 0
	margin auto
	right 14px

.b18-icon-span span
	display block
	position absolute
	height 2px
	width 100%
	background c-1
	border-radius 9px
	opacity 1
	left 0
	transform rotate(0)
	transition .25s ease-in-out

.b18-icon-span span:nth-child(1)
	transform rotate(90deg)
	top 7px

.b18-icon-span span:nth-child(2)
	top 7px
	transform rotate(0deg)


//acordion tab2 active
.b18-barra.active
	background c-4
	.b18-icon-span
		span:nth-child(1)
			transform rotate(0deg)
		span:nth-child(2)
			transform rotate(0deg)

//acordion tab2 hover
@media screen and (min-width 1025px)
	.b18-barra:hover
		background c-4
		.b18-mas-menos span:nth-child(1), .b18-mas-menos span:nth-child(2)
			background c-3


.b18-body
	display none
	padding 22px 17px 45px 17px
	box-sizing border-box
	font-size 14px


//tab3
.b18-t3-item
	padding 45px 0 22px 0
	position relative
	&:before
		content ""
		position absolute
		width 100%
		margin auto
		left 0
		right 0
		height 2px
		bottom 0
		background c-8
		opacity .4
	&:last-child
		&:before
			display none

.b18-t3-cnt-item
	max-width 780px
	margin auto
	width 100%
	position relative

.b18-t3-img
	position absolute
	top 0
	left 0
	width 165px

.b18-t3-texto
	padding-top 45px
	width 100%
	display inline-block
	vertical-align top
	padding-left 180px
	box-sizing border-box
	text-align justify

.b18-t3-titulo
	h3
		font-size 22px
		color c-4
	strong
		font-family t-2
		color c-3

.b18-t3-txt
	h3
		margin 0
		font-size 14px
		margin-bottom 5px
	p
		margin 0
		font-size 14px

.b18-t3-link
	margin-top 20px
	font-size 14px

.b18-icon-linkedin
	display inline-block
	width 25px
	height 25px
	line-height 25px
	font-size 13px
	text-align center
	color c-3
	border 2px solid c-3
	border-radius 100%
	margin-left 11px
	transition all .3s linear

//TAB3 hover icono
@media screen and (min-width 1025px)
	.b18-icon-linkedin:hover
		background c-3
		color blanco

//TAB4
.b18-tab-4
	.b18-body li
