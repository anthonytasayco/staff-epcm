.b18
	width 100%
	overflow hidden

.b18-cnt
	max-width 800px
	width 95%
	margin auto
.b18-list-romb
	h3
		margin-bottom 20px
		margin-top 30px
	ol
		li
			counter-increment list
			list-style-type none
			margin-bottom 13px
			margin-top 13px
			line-height 1.9
			position relative
			&:before
				color: c-4
				content: counter(list) "."
				left:-32px
				position: absolute
				text-align: right
				width: 26px
	ul
		li
			position relative
			padding-left 22px
			line-height 1.9
			margin-bottom 9px
			&:before
				content "\e930"
				top 2px
				left 0
				color c-4
				font-size 12px
				font-family icomoon
				position absolute
.content-text > ul > li
	list-style-type none
	margin-bottom 20px
		
.b18-tab-links
	font-size 0

.b18-link
	display inline-block
	vertical-align top
	text-transform uppercase
	padding-right 48px
	box-sizing border-box
	position relative
	font-size 16px
	color c-0
	transition all .3s ease
	&:last-child
		padding-right 0
	&:before
		content ""
		position absolute
		bottom 1px
		left 0
		background c-8
		height 3px
		width 100%
	&:after
		content ""
		position absolute
		top 0
		left 0
		background c-8
		height 3px
		width 100%
		opacity 0

.b18-link-table
	display table-cell
	vertical-align middle
	height 40px
	position relative
	&:before
		content ""
		position absolute
		bottom 0
		left 0
		height 5px
		background c-4
		width 0
		transition all .3s ease

//link active
.b18-link.active
	color c-3
	.b18-link-table:before
		width 100%

//link hover
@media screen and (min-width 1025px)
	.b18-link:hover
		color c-3
		.b18-link-table:before
			width 100%


//TAB
.b18-text-bottom
	display block
	font-size 91px
	font-family t-2
	color c-0
	text-transform uppercase
	opacity .10
	position absolute
	right 0
	left 0
	bottom -27px
	margin auto
	text-align center
	line-height 90px

.b18-cnt-item
	padding-top 47px
	padding-bottom 170px

/* Tab1 */
.b18-titulo
	margin-bottom 20px
	h3
		font-size 16px
		color c-4
		line-height 1.2
		margin 0
	strong
		display block
		font-size 25px
		color c-3
	p
		margin 0
		margin-top 12px
		font-size 14px
	ul
		li
			position relative
			padding-left 22px
			line-height 1.9
			font-size 14px	
			margin-bottom 9px
			&:before
				content "\e930"
				top 2px
				left 0
				color c-4
				font-size 12px
				font-family icomoon
				position absolute
.b18-lista
	li
		position relative
		padding-left 15px
		margin-bottom 10px
		font-size 14px
		&:before
			content ""
			position absolute
			top 5px
			left 0
			width 7px
			height 7px
			background c-4
			transform rotate(45deg)

