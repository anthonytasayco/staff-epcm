.b27
	width 100%
	height auto
	padding-top 50px
	padding-bottom 115px
.b27-wrapper
	&.wancho
		max-width 867px
		
.b27-title
	text-align center
	padding 0px 0px 20px
	position relative
	h3
		font-family t-0
		font-weight normal
		font-size 32px
		color c-7
	span
		font-family t-2
		font-weight normal
		font-size 18px
		color c-3
.b27-title-img
	width 70px
	position absolute
	top -15px
	left 50px
	right 0
	img
		img-res()
.b27-accordion
	padding-top 30px
.b27-tabs
	display block
	position relative
	font-family t-0
	font-weight normal
	font-size 15px
	background-color c-2
	padding 10px 30px 10px 20px
	box-sixing border-box
	margin-top 10px
	cursor pointer
	color negro
	transition all .3s
	span
		position absolute
		right 20px
		font-size 30px
		top 5px
		font-weight bold
		transform rotate(180deg)
		color c-0
		transition all .3s
	&.active
		color c-3
		transition all .3s
		background-color rgba(0, 54, 156, 0.1)
		span
			color c-3
			transform rotate(360deg)
.b27-tab
	display none
		

.b27-tab-content
	line-height 1.4
	color c-1
	font-family t-0
	font-size 14px
	padding 0 20px
	padding-top 20px
	padding-bottom 40px
	p
		margin-bottom 15px
		&:last-child
			margin-bottom 0
	ul
		li
			position relative
			padding-left 22px
			line-height 1.9
			margin-bottom 9px
			&:before
				content "\e930"
				top 2px
				left 0
				color c-4
				font-size 12px
				font-family icomoon
				position absolute

@media screen and (min-width 1025px)
	.b27-tabs
		&:hover
			color c-3
			background-color rgba(0, 54, 156, 0.1)
			span
				color c-3

@media screen and (max-width 1024px)
	.b27
		padding 50px 0px
		
@media screen and (max-width 640px)
	.b27
		padding 30px 0px
		
	.b27-title
		h3
			font-size 28px
		span
			font-size 16px
			
	.b27-tabs
		font-size 13px
		span
			font-size 20px

@media screen and (max-width 480px)
	.b27-title
		h3
			font-size 26px
		span
			font-size 14px
