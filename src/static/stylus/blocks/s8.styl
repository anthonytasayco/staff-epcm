.b8
	padding 70px 0px

// inicio flechas slider	
.b8PrevLeft, .b8NextLeft, .b8PrevRight, .b8NextRight
	display block
	width 30px
	height 30px
	line-height 30px
	position absolute
	top 45%
	.bx-prev, .bx-next
		display block
		width 100%
		height 100%
		&:before
			content ""
			display block
			width 100%
			height 100%
			color c-1
			font-family icomoon
			text-align center
			font-size 30px

.b8PrevLeft, .b8PrevRight
	left -40px
	.bx-prev
		&:before
			content "\e607"
	
.b8NextLeft, .b8NextRight
	right -40px
	.bx-next
		&:before
			content "\e606"
// fin flechas slider			
			
		
.b8Title
	display inline-block
	position absolute
	top 28px
	h2
		line-height 1.2
		color c-1
		font-family t-7
		font-weight normal
		font-size 18px
		margin-bottom 0
	strong
		display block
		color c-4
		font-family t-6
		font-weight normal

.b8Main
	font-size 0		

.b8Left, .b8Right
	display inline-block
	vertical-align top
	width 50%
	box-sizing border-box
	position relative

.b8Left
	padding-left 160px
	&:after
		content ""
		width 1px
		height 74px
		background #B3B3B3
		position absolute
		top 20px
		right 0		
	.b8Title
		width 120px
		left 0

.b8Right
	padding-left 280px
	.b8Title
		width 180px
		left 65px
		

.b8SliderLeft
	position relative
	ul
		font-size 0
	li
		display inline-block
		vertical-align top
		width 170px
		padding-top 20px		
	img
		img-res()

.b8NoSliderLeft
	li
		margin-right 20px

.b8ActiveLeft
	width 360px
	margin-left 0
	margin-right auto		

.b8SliderRight
	position relative
	ul
		font-size 0
	li
		display inline-block
		vertical-align top
		width 84px
		padding-top 20px
	img
		img-res()

.b8NoSLiderRight
	li
		margin-right 20px

.b8ActiveRight
	width 292px
	margin-left 0
	margin-right auto		


// responsive
@media screen and (max-width 1280px)
	.b8
		padding 50px 0
		
	.b8Title
		display block
		position static
	
	.b8Main
		text-align center
	
	.b8Left, .b8Right
		padding 0 10px
		
	.b8Left
		.b8Title
			width auto
		&:after
			height 100%
			top 0

	.b8NoSliderLeft 
		li
			margin 0 10px
		
	.b8ActiveLeft
		margin auto
			
	.b8Right
		.b8Title
			width auto
	
	.b8NoSLiderRight 
		li
			margin 0 10px
	
	.b8ActiveRight
		margin auto

@media screen and (max-width 960px)
	.b8ActiveLeft
		width 170px	
		.b8RespLef
			width 170px
			overflow hidden
		.b8EnvolveLeft
			width 240px
			margin auto

	.b8ActiveRight
		width 188px	
		.b8RespRight
			width 188px
			overflow hidden		
		.b8EnvolveRight
			width 292px
			margin auto
		

@media screen and (max-width 767px)
	.b8
		padding 30px 0
		
	.b8Left, .b8Right
		display block
		width 100%
		padding 0
	
	.b8Left
		margin-bottom 50px
		&:after
			display none

	.b8ActiveLeft
		width 100%
		.b8RespLef
			width 100%

	.b8ActiveRight
		width 292px	
		.b8RespRight
			width 292px

@media screen and (max-width 480px)
	.b8ArrowLeft, .b8ArrowRight
		display none
		
