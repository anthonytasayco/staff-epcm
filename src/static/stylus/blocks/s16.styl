.b16
	width 100%
	padding-top 75px
	padding-bottom 50px

.b16-cnt
	font-size 0
	position relative
	cf()

/* izquierda */
.b16-izquierda
	display inline-block
	vertical-align top
	width 183px
	float left

.b16-titulo-top
	h3
		font-size 15px
		font-family t-2
		color c-3
		text-transform uppercase

.b16-barra
	color blanco

.b16-barra-item
	border-bottom 3px solid blanco
	&:last-child
		margin-bottom 0

.b16-barra-top
	display table-cell
	vertical-align middle
	position relative
	height 45px
	width 2000px
	background c-4
	padding 0 25px
	box-sizing border-box
	text-transform uppercase
	font-family t-3
	font-size 15px
	p
		padding-left 25px
		box-sizing border-box
		margin 0

.b16-barra-icon
	position absolute
	top 0
	bottom 0
	margin auto
	line-height 45px
	font-size 17px
	font-weight bold


.b16-barra-content
	background rgba(116, 205, 128, .7)
	padding 15px 28px 20px 28px

.b16-check
	margin-bottom 10px
	&:last-child
		margin-bottom 0
	input[type="checkbox"]
		display none
	label
		display inline-block
		position relative
		padding-left 26px
		font-size 15px
		&:before
			content ""
			position absolute
			left 0
			top 0
			bottom 0
			margin auto
			width 10px
			height 10px
			border 2px solid blanco
		&:after
			content "\e925"
			font-family	icomoon
			position absolute
			top -1px
			left 3px
			width 10px
			height 10px
			font-size 14px
			font-weight bold
			color c-1
			opacity 0

	input[type="checkbox"]:checked + label:after
			opacity 1

.b16-derecha
	width calc(100% - 228px)
	box-sizing border-box
	display inline-block
	vertical-align top
	float right

/* Derecha */
.b16-derecha-title
	margin-bottom 30px
	margin-left 1.5%
	h3
		font-size 20px
		color c-3
		text-transform uppercase
	strong
		font-family t-2
		color c-4

.b16-item
	position relative
	width 31.8%
	margin 0 0 2.5% 1.5%
	display inline-block
	vertical-align top

.b16-img
	width 100%
	backgroundsize()
	height 340px
	position relative
	&:before
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%)
		opacity 0
		visibility hidden

	&:after
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0, 54, 156, .7)

//info absolute 1
.b16-absolute1
	position absolute
	top 0
	left 0
	padding 23px 15px 0 15px
	opacity 1
	visibility visible

.b16-absolute-info
	color blanco
	position relative
	padding-left 11px
	box-sizing border-box
	&:before
		content ""
		position absolute
		top 0
		left 0
		height 100%
		background blanco
		width 2px
	h3
		font-size 15px
		text-transform uppercase
		font-family t-2
		margin 0
		margin-top 7px
		line-height 1.3

.b16-fecha
	color c-4
	font-size 15px
	position relative
	padding-left 24px
	font-family t-1
	&:before
		content "\e91b"
		font-family icomoon
		position absolute
		top 0
		left 0
		bottom 0
		margin auto
		font-size 17px
		width 17px
		height 18px

//info absolute 2
.b16-absolute2
	position absolute
	bottom 0
	left 0
	padding 0 15px 25px 15px
	color blanco
	opacity 0
	visibility hidden
	h3
		font-size 15px
		text-transform uppercase
		line-height 1.3
		margin 0


.b16-absolute3
	position absolute
	bottom 0
	right 0
	padding 0 25px 17px 0

.b16-absolute4
	position absolute
	top 0
	left 0
	padding-top 30px
	opacity 0
	visibility hidden

.b16-etiqueta
	background c-4
	padding-left 11px
	padding-right 14px
	display inline-block
	font-size 13px
	font-family t-6
	text-transform uppercase
	color blanco
	position relative
	&:before
		content ""
		position absolute
		top 0
		right -7px
		width 0
		height 0
		border-style solid
		border-width 14px 0 14px 8px
		border-color transparent transparent transparent c-4
	span
		display table-cell
		vertical-align middle
		height 28px
		position relative
		padding-left 16px
		&:before
			content "\e925"
			font-family icomoon
			font-weight bold
			font-size 10px
			position absolute
			top 0
			bottom 0
			left 0
			line-height 28px


.b16-sidebar-btn
	display none

@media screen and (min-width 1025px)
	//change boton
	.b16-absolute3 .btn2:hover
		background c-4

	.b16-img:before
		opacity 1
		visibility visible
		transition all .3s ease

	.b16-absolute2
		opacity 1
		visibility visible
		transition all .3s ease

	.b16-img:after
		opacity 0
		visibility hidden
		transition all .3s ease

	.b16-absolute1
		opacity 0
		visibility hidden
		transition all .3s ease

	.b16-absolute3
		opacity 0
		visibility hidden
		transition all .3s ease

	.b16-absolute4
		opacity 1
		visibility visible
		transition all .3s ease

	.b16-item:hover
		.b16-img:before
			opacity 0
			visibility hidden
		.b16-img:after
			opacity 1
			visibility visible
		.b16-absolute2
			opacity 0
			visibility hidden
		.b16-absolute4
			opacity 0
			visibility hidden
		.b16-absolute1
			opacity 1
			visibility visible
		.b16-absolute3
			opacity 1
			visibility visible

@media screen and (max-width 1200px)
	.b16-derecha
		width calc(100% - 190px)

@media screen and (max-width 1024px)
	.b16
		padding 50px 0

@media screen and (max-width 960px)
	.b16-item
		width 48.5%
		margin 0 0 1.5%	1.5%

@media screen and (max-width 768px)
	.b16-izquierda
		width 100%
		position relative

	.b16-titulo-top
		text-align center

	.b16-derecha
		width 100%

	.b16-derecha-title
		text-align center

	.b16-item
		width 48%
		margin 0 1% 2% 1%

	//aside
	.b16-izquierda
		position fixed
		left -200px
		top 0
		width 200px
		height 100%
		padding 20px 10px
		box-sizing border-box
		background blanco
		z-index 1000
		transition all .4s ease

	.b16-sidebar-btn
		position fixed
		top 0
		bottom 0
		left 0
		padding 8px 20px
		height 35px
		display inline-block
		box-sizing border-box
		margin auto
		font-size 15px
		background c-7
		color blanco
		z-index 2000
		cursor pointer
		transition all .4s ease
		border-top-right-radius 10px
		border-bottom-right-radius 10px

	.b16-overlay
		position fixed
		width 100%
		height 100%
		background negro
		transition all .4s ease
		opacity 0
		visibility hidden
		z-index -1
		top 0

	//activo
	.b16
		&.active
			.b16-sidebar-btn
				left 200px
			.b16-izquierda
				left 0px
				z-index 1300
			.b16-overlay
				z-index 1200
				opacity .6
				visibility visible

@media screen and (max-width 640px)
	.b16
		padding 30px 0

	.b16-item
		width 100%
		margin 0 0 1.5% 0
		&:last-child
			margin-bottom 0

	.b16-img
		height 280px
