.b21Main
	text-align left
	padding-top 70px
	padding-bottom 50px
	&.wancho
		max-width 960px	
	
.b21Title-1
	h2
		display inline-block
		background blanco
		color c-4
		font-family t-2
		font-weight normal
		font-size 18px
		position relative
		bottom -1px
		padding-right 30px
		margin-bottom 0
	&:after
		content ""
		display block
		width 92%
		height 1px
		background c-13

.b21Text
	line-height 1.4
	color c-10
	font-family t-0
	font-size 14px
	text-align justify
	margin-top 25px
	margin-bottom 20px
	p
		margin-bottom 0

.b21Campos-1, .b21Campos-2, .b21Campos-3
	padding-left 35px
	li
		margin-bottom 15px
		&:last-child
			margin-bottom 0

.b21Campos-1
	margin-bottom 35px
	ul
		border-bottom 1px solid c-13
		padding-bottom 55px
	
.b21two
	font-size 0
	.g-input
		display inline-block
		vertical-align top
		width 48%
		&:nth-child(odd)
			margin-right 2%
		&:nth-child(even)
			margin-left 2%

.b21Title-2
	margin-bottom 20px
	label
		display inline-block
		color c-4
		font-family t-2
		font-size 18px
		position relative
		padding-left 25px
	input[type="checkbox"]
		display none		
	input[type="checkbox"]:checked + label span:before
		opacity 1
		visibility visible
			
.b21Circle
	display block
	width 14px
	height 14px
	border 1px solid c-10
	border-radius 50%
	position absolute
	top 2px
	left 0
	&:before
		content ""
		display block
		width 8px
		height 8px
		background c-3
		border-radius 50%			
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		opacity 0
		visibility hidden

.b21CntToggle
	display none
	padding-bottom 110px
			
.b21Title-3
	margin 20px 0
	h2
		color c-0
		font-family t-0
		font-weight normal
		font-size 18px
		margin-bottom 0
	strong
		color c-3
		font-family t-2
		font-weight normal

.b21Wrap
	padding-left 35px
	margin-top 35px
	
.b21CntRadio
	li
		display inline-block
		vertical-align top
		width 18.74%
		margin-right 10px
		margin-bottom 10px
		&:last-child
			margin-right 0
	label
		display block
		position relative
		padding-left 15px
				
	input[type="radio"]
		display none		
	input[type="radio"]:checked + label span:before
		opacity 1
		visibility visible

.b21IconoRadio
	display block
	width 9px
	height 9px
	overflow hidden
	border-radius 50%
	border 1px solid c-11
	background #C6C6C5
	position absolute
	top 50%
	left 0
	margin-top -4.5px
	&:before
		display block
		content ""
		width 5px
		height 5px
		background c-11
		border-radius 50%
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		z-index 2
		opacity 0
		visibility hidden
	&:after
		display block
		content ""
		width 100%
		height 100%
		background blanco
		border-radius 50%
		position absolute
		top 1px
		left 1px

.b21Img
	width 100%
	img
		img-res()

.b21Foot
	margin-top 60px
	margin-bottom 40px
	label
		display block
		position relative
		padding-left 25px
	input[type="checkbox"]
		display none		
	input[type="checkbox"]:checked + label span:before
		opacity 1
		visibility visible

.b21iconoFoot
	display block
	width 15px
	height 15px
	border 1px solid c-10
	box-sizing border-box
	position absolute
	top 1px
	left 0
	&:before
		content "\e925"
		display block
		width 100%
		height 100%
		line-height 13px
		color c-3
		font-family icomoon
		font-weight bold
		font-size 8px
		text-align center
		position absolute
		top 0
		left 0
		opacity 0
		visibility hidden
		
	
.b21TextFoot
	color c-14
	font-family t-0
	font-size 14px
	p
		margin-bottom 0
	a
		color c-3
		font-family t-2
		text-decoration underline

.b21Btn
	.btn2 .btn-ico
		font-size 15px	


// responsive
@media screen and (max-width 1024px)
	.b21Main
		padding-top 50px
		padding-bottom 0
	
	.b21CntToggle
		padding-bottom 50px
				
	.b21CntRadio 
		li
			width 194px
			

@media screen and (max-width 640px)
	.b21Campos-1, .b21Campos-2, .b21Campos-3
		padding-left 15px

	.b21two 
		.g-input
			display block
			width 100%
			margin-bottom 15px
			&:last-child
				margin-bottom 0
			&:nth-child(odd), &:nth-child(even)
				margin-left 0
				margin-right 0

	.b21CntRadio 
		li
			width 190px				
	
	.b21Foot
		margin 40px 0

	.b21Btn
		text-align center

@media screen and (max-width 480px)
	.b21CntRadio 
		li
			display block
			width 194px
			margin-left 0
			margin-right auto