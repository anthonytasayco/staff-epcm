.b29
	padding 50px 0

.b29-cnt
	max-width 1055px
	width 95%
	margin auto
	text-align center

//links
.b29-links
	font-size 0
	display table
	width 100%
	max-width 920px
	margin auto
	text-align center

.b29-link
	width 50%
	display table-cell
	vertical-align middle
	padding 5px 10px
	box-sizing border-box
	height 40px
	font-size 18px
	font-family t-2
	color c-0
	background #f2f2f2
	transition all .3s linear

//link active
.b29-link.active
	background c-3
	color blanco

//link hover
@media screen and (min-width 1025px)
	.b29-link:hover
		background c-3
		color blanco

//contenido
.b29-texto-top
	padding-top 35px
	max-width 820px
	width 100%
	margin auto
	font-size 14px
	p
		margin 0

//item
.b29-cnt-items
	margin-top 70px
	text-align left
	font-size 0

.b29-item
	position relative
	width 31.33%
	margin 0 1%
	margin-bottom 2%
	display inline-block
	vertical-align top

.b29-item-img
	backgroundsize()
	width 100%
	height 230px
	position relative
	&:before
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(3,3,3,0.7) 100%)
		transition all .4s linear
		opacity 0
		visibility hidden
	&:after
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background c-4
		opacity .8
		transition all .4s linear

.b29-texto-hidden
	position absolute
	top 0
	left 0
	padding 25px 10px 10px 15px
	box-sizing border-box
	font-size 14px
	font-family t-2
	text-transform uppercase
	color blanco
	line-height 1.2
	transition all .4s linear
	p
		margin 0

.b29-texto
	position absolute
	bottom 0
	right 0
	padding 25px 10px 25px 15px
	box-sizing border-box
	font-size 14px
	font-family t-2
	text-transform uppercase
	color blanco
	line-height 1.2
	opacity 0
	visibility hidden
	transition all .4s linear
	p
		margin 0

.b29-vermas
	position absolute
	bottom 0
	right 0
	padding 10px 20px 14px 10px
	color blanco
	transition all .4s linear

.b29-ver
	position relative
	display table-cell
	vertical-align middle
	height 28px
	padding-right 45px
	box-sizing border-box
	font-family t-2
	font-size 14px
	&:before
		content "\e606"
		font-family icomoon
		position absolute
		top 0
		bottom 0
		right 0
		width 24px
		height 24px
		line-height 24px
		border 2px solid blanco
		border-radius 100%
		text-align center
		font-size 26px

@media screen and (min-width 1025px)
	.b29-texto-hidden
		opacity 0
		visibility hidden

	.b29-texto
		opacity 1
		visibility visible

	.b29-item-img
		&:before
			opacity 1
			visibility visible
		&:after
			opacity 0
			visibility hidden

	.b29-vermas
		opacity 0
		visibility hidden

	.b29-item:hover
		.b29-texto-hidden
			opacity 1
			visibility visible
		.b29-texto
			opacity 0
			visibility hidden
		.b29-vermas
			opacity 1
			visibility visible
		.b29-item-img
			&:before
				opacity 0
				visibility hidden
			&:after
				opacity .8
				visibility visible



//paginador

.b29-paginador
	margin-top 35px
	text-align right
	padding-right 10px
	li
		display inline-block
		vertical-align top

.b29-next
	margin-left 17px

.b29-prev
	margin-right 17px

.b29-next a, b29-prev a
	transition all .3s linear

.b29-num
	margin 0 6px
	a
		position relative
		padding-bottom 4px
		font-size 15px
		width 15px
		display block
		transition all .3s linear
		text-align center
		&:before
			content ""
			position absolute
			bottom 0
			left 0
			width 0
			height 3px
			background c-4
			transition all .3s ease

.b29-num a.active
	color c-4
	font-family t-2
	&:before
		width 100%

@media screen and (min-width 1025px)

	.b29-num a:before
		width 0

	.b29-num a:hover
		color c-4
		&:before
			width 100%

	.b29-next a:hover, .b29-prev a:hover
		color c-4

@media screen and (max-width 960px)
	.b29-item
		width 48%

@media screen and (max-width 768px)
	.b29-link
		font-size 15px

@media screen and (max-width 640px)
	.b29
		padding 30px 0

	.b29-item
		width 100%
		margin 0
		margin-bottom 2%
		&:last-child
			margin-bottom 0

	.b29-link
		font-size 14px

	.b29-item-img
		height 200px

	.b29-texto-top
		padding-top 30px

	.b29-cnt-items
		margin-top 30px

	.b29-paginador
		text-align center
		padding-right 0

@media screen and (max-width 480px)
	.b29-link
		width 100%
		display inline-block
		padding 0px 10px
		line-height 40px
