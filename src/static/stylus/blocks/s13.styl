.b13
	padding 0 0 120px 0
	width 100%
	.bx-wrapper .bx-controls-direction a
		background c-3
		border-radius 37px
		height 37px
		width 37px
		text-indent 0
		text-align center
		transition all .5s ease-in
		&:hover
			background c-4
			&:before
				color blanco
				transition all .5s ease-in
		&:before
			position absolute
			top 0
			left 0
			color blanco
			display block
			line-height 37px
			content "\e607"
			font-family icomoon
			font-size 26px
			width 100%
			height 100%
	.bx-wrapper .bx-controls-direction a.bx-next
		&:before
			content "\e606"
	.bx-wrapper .bx-prev
		left -50px
	.bx-wrapper .bx-next
		right -50px
		
.b13-content-title
	padding-top 60px
	max-width 805px
	margin 0 auto
.b13-title
	text-align center
	margin 0 auto
	max-width 605px
	position relative
	padding 27px 0
	&:before
		content ""
		position absolute
		top 0
		left 0
		right 0 
		width 98px
		height 121px
		margin auto
		background url("../img/b13-img.png") no-repeat
	h2
		margin 0 
		font-weight normal
		color c-3
		text-transform uppercase
		font-family t-6
		font-size 20px
	p
		max-width 605px
		margin 15px 0 0 0
		font-size 14px
.b13-ctn-slider
	margin 10px 0 0 0
.b13-item
	position relative
	text-align center
	height 420px
	box-sizing border-box
	position relative
	font-size 14px
	&:before
		position absolute
		top 0
		left 0
		content ""
		display block
		width 100%
		height 100%
		opacity .1
		background c-5
.b13-item-ctn
	box-sizing border-box
	padding 0 20px
	color c-10
	position relative 
	z-index 2
	padding-top 17px
	h3
		margin 13px 0 0 0
		background c-5
		display inline-block
		color blanco
		font-size 16px
		font-family t-6
		padding 5px 20px
	h4
		margin 20px 0 11px 0
		color c-4
	p
		margin 0
	figure
		width 172px
		height 172px
		overflow hidden
		margin 0 auto
	img
		border-radius 50%
	ul
		li
			position relative
			padding-left 22px
			line-height 1.9
			margin-bottom 9px
			&:before
				content "\e930"
				top 2px
				left 0
				color c-4
				font-size 12px
				font-family icomoon
				position absolute
	ol
		li
			counter-increment list
			list-style-type none
			margin-bottom 13px
			margin-top 13px
			line-height 1.9
			position relative
			&:before
				color: c-4
				content: counter(list) "."
				left:-32px
				position: absolute
				text-align: right
				width: 26px

.b13-cnt-img
	display inline-block
	border 8px solid blanco
	border-radius 50%
			
@media screen and (max-width: 1300px)
	.b13ActiveSlider
		width 873px
		margin-left auto
		margin-right auto
@media screen and (max-width: 1024px)
	.b13
		padding-bottom 50px
	.b13-content-title
		padding-top 50px
@media screen and (max-width: 1000px)
	.b13ActiveSlider
		width 570px
@media screen and (max-width: 690px)
	.b13ActiveSlider
		width 267px
	.b13
		padding-bottom 30px
		.bx-wrapper .bx-controls-direction a
			display none
	.b13-content-title
		padding-top 30px